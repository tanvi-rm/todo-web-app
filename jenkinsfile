pipeline {
  agent any
  stages {
    stage('Clone') {
      steps {
        git 'https://github.com/tanvi-rm/todo-web-app.git'
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t task-manager-lite .'
      }
    }
    stage('Run Docker Container') {
      steps {
        sh 'docker run -d -p 8080:80 task-manager-lite || true'
      }
    }
  }
}